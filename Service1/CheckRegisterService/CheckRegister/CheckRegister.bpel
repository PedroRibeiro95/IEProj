<process name="CheckRegister"
               targetNamespace="http://xmlns.oracle.com/CheckRegisterService/CheckRegister/CheckRegister"
               xmlns="http://docs.oasis-open.org/wsbpel/2.0/process/executable"
               xmlns:client="http://xmlns.oracle.com/CheckRegisterService/CheckRegister/CheckRegister"
               xmlns:ora="http://schemas.oracle.com/xpath/extension"
               xmlns:bpelx="http://schemas.oracle.com/bpel/extension"
         xmlns:bpel="http://docs.oasis-open.org/wsbpel/2.0/process/executable"
         xmlns:ns1="http://xmlns.oracle.com/pcbpel/adapter/db/CheckRegisterService/CheckRegister/CheckDatabase"
         xmlns:ns3="http://xmlns.oracle.com/pcbpel/adapter/db/top/CheckDatabase"
         xmlns:ns2="http://www.tecnico.ie.proj.com"
         xmlns:xp20="http://www.oracle.com/XSL/Transform/java/oracle.tip.pc.services.functions.Xpath20"
         xmlns:bpws="http://schemas.xmlsoap.org/ws/2003/03/business-process/"
         xmlns:oraext="http://www.oracle.com/XSL/Transform/java/oracle.tip.pc.services.functions.ExtFunc"
         xmlns:dvm="http://www.oracle.com/XSL/Transform/java/oracle.tip.dvm.LookupValue"
         xmlns:hwf="http://xmlns.oracle.com/bpel/workflow/xpath"
         xmlns:ids="http://xmlns.oracle.com/bpel/services/IdentityService/xpath"
         xmlns:bpm="http://xmlns.oracle.com/bpmn20/extensions"
         xmlns:xdk="http://schemas.oracle.com/bpel/extension/xpath/function/xdk"
         xmlns:xref="http://www.oracle.com/XSL/Transform/java/oracle.tip.xref.xpath.XRefXPathFunctions"
         xmlns:ldap="http://schemas.oracle.com/xpath/extension/ldap">

    <import namespace="http://xmlns.oracle.com/CheckRegisterService/CheckRegister/CheckRegister" location="CheckRegister.wsdl" importType="http://schemas.xmlsoap.org/wsdl/"/>
    <!-- 
      ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
        PARTNERLINKS                                                      
        List of services participating in this BPEL process               
      ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
    --> 
  <partnerLinks>
    <!-- 
      The 'client' role represents the requester of this service. It is 
      used for callback. The location and correlation information associated
      with the client role are automatically set using WS-Addressing.
    -->
    <partnerLink name="checkregister_client" partnerLinkType="client:CheckRegister" myRole="CheckRegisterProvider"/>
    <partnerLink name="CheckDatabase" partnerLinkType="ns1:CheckDatabase_plt"
                 partnerRole="CheckDatabase_role"/>
  </partnerLinks>

  <!-- 
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
      VARIABLES                                                        
      List of messages and XML documents used within this BPEL process 
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
  -->
  <variables>
    <!-- Reference to the message passed as input during initiation -->
    <variable name="inputVariable" messageType="client:CheckRegisterRequestMessage"/>

    <!-- Reference to the message that will be returned to the requester-->
    <variable name="outputVariable" messageType="client:CheckRegisterResponseMessage"/>
    <variable name="Invoke1_selectByPrimaryKey_InputVariable"
              messageType="ns1:selectByPrimaryKey_inputParameters"/>
    <variable name="Invoke1_selectByPrimaryKey_OutputVariable"
              messageType="ns1:ClientCollection_msg"/>
  </variables>

  <!-- 
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
     ORCHESTRATION LOGIC                                               
     Set of activities coordinating the flow of messages across the    
     services integrated within this business process                  
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
  -->
  <sequence name="main">

    <!-- Receive input from requestor. (Note: This maps to operation defined in CheckRegister.wsdl) -->
    <receive name="receiveInput" partnerLink="checkregister_client" portType="client:CheckRegister" operation="process" variable="inputVariable" createInstance="yes"/>
    <assign name="Assign_Email">
      <copy>
        <from>$inputVariable.payload/ns2:Email</from>
        <to>$Invoke1_selectByPrimaryKey_InputVariable.selectByPrimaryKey_inputParameters/ns3:email</to>
      </copy>
    </assign>
    <invoke name="InvokeDB"
            partnerLink="CheckDatabase" portType="ns1:CheckDatabase_ptt"
            operation="selectByPrimaryKey"
            inputVariable="Invoke1_selectByPrimaryKey_InputVariable"
            outputVariable="Invoke1_selectByPrimaryKey_OutputVariable"
            bpelx:invokeAsDetail="no"/>
    <if name="If1">
      <documentation>
        <![CDATA[Account Exists]]>
      </documentation>
      <condition>$Invoke1_selectByPrimaryKey_OutputVariable.ClientCollection/ns3:Client/ns3:email != ''</condition>
      <assign name="Assign_AccountExistsMessage">
        <copy>
          <from>concat('', 'ACC')</from>
          <to>$outputVariable.payload/ns2:Response</to>
        </copy>
      </assign>
      <else>
        <documentation>
          <![CDATA[Create Account]]>
        </documentation>
        <assign name="Assign_NoAccountMessage">
          <copy>
            <from>concat('', 'NOACC')</from>
            <to>$outputVariable.payload/ns2:Response</to>
          </copy>
        </assign>
      </else>
    </if>
    <!-- Generate reply to synchronous request -->
    <reply name="replyOutput" partnerLink="checkregister_client" portType="client:CheckRegister" operation="process" variable="outputVariable"/>
  </sequence>
</process>